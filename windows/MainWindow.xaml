<Window x:Class="FAMESmartFlasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:FAMESmartFlasher"
        xmlns:vm="clr-namespace:FAMESmartFlasher.ViewModels"
        mc:Ignorable="d"
        Title="FAME Smart Flasher" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0">
            <!-- Port Selection -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="USB Port" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AvailablePorts}"
                          SelectedItem="{Binding SelectedPort}"
                          DisplayMemberPath="DisplayName"
                          IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                          Margin="0,0,8,0" Height="32"/>
                <Button Grid.Column="2"
                        Command="{Binding RefreshPortsCommand}"
                        IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                        ToolTip="Refresh ports"
                        Width="32" Height="32" Content="âŸ³" FontSize="18"/>
            </Grid>

            <!-- Firmware Selection -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Firmware" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Grid.Column="1">
                    <Button Command="{Binding SelectFirmwareCommand}"
                            IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                            HorizontalContentAlignment="Left"
                            Height="32"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" Margin="0,0,8,0" FontSize="14"/>
                            <TextBlock Text="{Binding FirmwareFile.FileName, FallbackValue='Select File...'}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <TextBlock Text="{Binding FirmwareFile.SizeDescription}"
                              FontSize="11"
                              Foreground="Gray"
                              Margin="0,4,0,0"
                              Visibility="{Binding FirmwareFile, Converter={StaticResource NullToVisibilityConverter}}"/>
                </StackPanel>
                <Button Grid.Column="2"
                        Command="{Binding SelectDirectoryCommand}"
                        IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                        ToolTip="Select PlatformIO build directory"
                        Width="32" Height="32"
                        Margin="8,0,0,0" Content="ðŸ“" FontSize="16"/>
            </Grid>

            <!-- Advanced Settings (Expander) -->
            <Expander Header="Advanced Settings"
                     IsExpanded="False"
                     IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                     Margin="0,0,0,16">
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Baud Rate" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="1"
                             ItemsSource="{Binding BaudRates}"
                             SelectedItem="{Binding SelectedBaudRate}"
                             IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                             Height="32"/>
                </Grid>
            </Expander>

            <!-- Progress Section -->
            <StackPanel Margin="0,16,0,16">
                <ProgressBar Value="{Binding Progress}"
                            Maximum="1.0"
                            Height="8"
                            IsIndeterminate="False"/>
                <TextBlock Text="{Binding Progress, StringFormat={}{0:P0}}"
                          FontSize="11"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,4,0,0"
                          Visibility="{Binding FlashingState.IsActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Status Message -->
            <Border CornerRadius="8"
                   Padding="12,10"
                   Margin="0,0,0,16"
                   Background="#F5F5F5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â—" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="16" Foreground="#2196F3"/>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </Border>

            <!-- Flash Button -->
            <Button Margin="0,0,0,16"
                   Padding="0,14"
                   HorizontalAlignment="Stretch"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Command="{Binding StartFlashingCommand}"
                   IsEnabled="{Binding CanFlash}"
                   Background="#2196F3"
                   Foreground="White"
                   BorderThickness="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="âš¡" Margin="0,0,8,0" FontSize="16"/>
                    <TextBlock Text="Flash Firmware" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Serial Monitor Toggle -->
            <CheckBox Content="Show Serial Monitor"
                     IsChecked="{Binding IsSerialMonitorEnabled, Mode=TwoWay}"
                     IsEnabled="{Binding FlashingState.IsActive, Converter={StaticResource InverseBoolConverter}}"
                     FontSize="13"/>
        </StackPanel>

        <!-- Serial Monitor -->
        <Border Grid.Row="1"
               CornerRadius="8"
               Background="#F5F5F5"
               Margin="0,16,0,0"
               Padding="16"
               Visibility="{Binding IsSerialMonitorEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Serial Monitor" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Connected"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  FontSize="12"
                                  Foreground="#4CAF50"
                                  Visibility="{Binding IsSerialMonitorConnected, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBlock Text="Disconnected"
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  FontSize="12"
                                  Foreground="Gray"
                                  Visibility="{Binding IsSerialMonitorConnected, Converter={StaticResource InverseBoolConverter}}"/>
                        <Button Command="{Binding ClearSerialOutputCommand}"
                               Width="28" Height="28"
                               Content="ðŸ—‘ï¸"
                               FontSize="14"
                               ToolTip="Clear output"/>
                    </StackPanel>
                </Grid>

                <!-- Output -->
                <Border Grid.Row="1"
                       Background="White"
                       CornerRadius="4"
                       BorderBrush="#E0E0E0"
                       BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Padding="8">
                        <TextBox Text="{Binding SerialMonitorOutput, Mode=OneWay}"
                                IsReadOnly="True"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="11"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
